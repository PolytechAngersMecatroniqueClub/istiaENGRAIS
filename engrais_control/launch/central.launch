<?xml version="1.6" ?>
<launch>

	<!--> Robot Control Arguments <-->
	<arg name="control_node_name" default="engrais_central"/>
	<arg name="subscribe_topic_1" default="lines1"/>
	<arg name="subscribe_topic_2" default="lines2"/>
	<arg name="publish_left_wheel" default="leftCommand"/>
	<arg name="publish_right_wheel" default="rightCommand"/>

	<arg name="global_frame" default="world"/>
	<arg name="selected_lines_topic" default="/engrais/robot_move/selected_lines"/>


	<node name="$(arg control_node_name)" pkg="engrais_control" type="robot_control" output="screen">
		<param name="subscribe_topic_front" type="string" value="$(arg subscribe_topic_1)"/>
		<param name="subscribe_topic_back" type="string" value="$(arg subscribe_topic_2)"/>
		<param name="publish_topic_left" type="string" value="$(arg publish_left_wheel)"/>
		<param name="publish_topic_right" type="string" value="$(arg publish_right_wheel)"/>

		<param name="rviz_frame" type="string" value="$(arg global_frame)"/>
		<param name="rviz_topic" type="string" value="$(arg selected_lines_topic)"/>

	</node>

</launch>
